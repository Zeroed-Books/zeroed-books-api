    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'zeroed-books-api'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=zeroed-books-api",
                    "--package=zeroed-books-api"
                ],
                "filter": {
                    "name": "zeroed-books-api",
                    "kind": "bin"
                }
            },
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "info,zeroed_books_api=trace,axum_jwks=debug",
                "JWT_AUDIENCE": "https://api.zeroedbooks.com/",
                "JWT_AUTHORITY": "https://zeroed-books-dev.us.auth0.com",
                // A stable secret key so cookie sessions stay valid across restarts.
                // Generated with:
                //   $ openssl rand -base64 50
                "SECRET_KEY": "xvpV7KL41RIFdnU7KTO99jYduEhEHJnsoYn26cEwrYIXPGGuqNXenxfRZE1+xSSzcZo="
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'zeroed-books-api'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=zeroed-books-api",
                    "--package=zeroed-books-api"
                ],
                "filter": {
                    "name": "zeroed-books-api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
